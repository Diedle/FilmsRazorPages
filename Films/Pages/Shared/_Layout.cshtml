<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] YourBestFilms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Films.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">

        <header class="header row">
            <div class="col-2 text-white">
                Логотип

            </div>

            <div class="col-1 align-self-center">
                <button type="button" class="btn btn-outline-success">Новинки</button>
            </div>

            <div class="col-1 align-self-center">
                <button type="button" class="btn btn-outline-success">Категории</button>
            </div>

            <div class="col">

            </div>
            <div class="col-2">
                <partial name="_LoginPartial" />
            </div>
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="fixed-bottom">
        
        <div class="container">
            &copy; 2023 - Films - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>